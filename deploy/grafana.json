{
    "dashboard": {
      "id": null,
      "title": "System & Service Overview",
      "uid": "sys-service-overview",
      "panels": [
        {
          "type": "row",
          "title": "Infrastructure Metrics"
        },
        {
          "type": "graph",
          "title": "CPU Usage",
          "datasource": "Prometheus",
          "targets": [
            { "expr": "100 - (avg by (instance) (irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)", "legendFormat": "{{instance}}" }
          ],
          "gridPos": { "h": 8, "w": 12, "x": 0, "y": 1 }
        },
        {
          "type": "graph",
          "title": "Memory Usage",
          "datasource": "Prometheus",
          "targets": [
            { "expr": "(node_memory_MemTotal_bytes - node_memory_MemAvailable_bytes) / node_memory_MemTotal_bytes * 100", "legendFormat": "{{instance}}" }
          ],
          "gridPos": { "h": 8, "w": 12, "x": 12, "y": 1 }
        },
        {
          "type": "graph",
          "title": "Disk Usage",
          "datasource": "Prometheus",
          "targets": [
            { "expr": "(node_filesystem_size_bytes{fstype!~\"tmpfs|aufs\"} - node_filesystem_free_bytes{fstype!~\"tmpfs|aufs\"}) / node_filesystem_size_bytes{fstype!~\"tmpfs|aufs\"} * 100", "legendFormat": "{{instance}} {{mountpoint}}" }
          ],
          "gridPos": { "h": 8, "w": 24, "x": 0, "y": 9 }
        },
        {
          "type": "row",
          "title": "Service HTTP Metrics"
        },
        {
          "type": "graph",
          "title": "Request Rate (RPS)",
          "datasource": "Prometheus",
          "targets": [
            { "expr": "sum by (service, method, path) (rate(http_requests_total[5m]))", "legendFormat": "{{service}} {{method}} {{path}}" }
          ],
          "gridPos": { "h": 8, "w": 12, "x": 0, "y": 17 }
        },
        {
          "type": "graph",
          "title": "Error Rate",
          "datasource": "Prometheus",
          "targets": [
            { "expr": "sum by (service) (rate(http_requests_total{status=~\"5..\"}[5m]))", "legendFormat": "{{service}}" }
          ],
          "gridPos": { "h": 8, "w": 12, "x": 12, "y": 17 }
        },
        {
          "type": "graph",
          "title": "Request Latency",
          "datasource": "Prometheus",
          "targets": [
            { "expr": "histogram_quantile(0.95, sum by (le, service) (rate(http_request_duration_seconds_bucket[5m])))", "legendFormat": "{{service}} p95" }
          ],
          "gridPos": { "h": 8, "w": 24, "x": 0, "y": 25 }
        }
      ],
      "templating": {
        "list": [
          {
            "type": "query",
            "name": "service",
            "datasource": "Prometheus",
            "query": "label_values(http_requests_total, service)",
            "allValue": ".*",
            "multi": true,
            "includeAll": true
          }
        ]
      },
      "schemaVersion": 26,
      "version": 1,
      "refresh": "5s"
    }
  }
  